#!/usr/bin/env node

/*jslint node:true*/

'use strict';

// Создаём сервер
var app = require('../app');
app.set('port', process.env.PORT || 80);

// Запускаем сервер
var server = app.listen(app.get('port'), function () {
	console.log('Сервер запущен. Порт: ' + server.address().port);
	console.log('===============================================');
	console.log('===============================================');
});
