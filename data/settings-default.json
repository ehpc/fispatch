{
	"repositories":
	[
		{
			"address": "http://mercurial.fisgroup.ru/fcs/web/akbarsweb/",
			"alias": "fcs",
			"cloneRev": "10100",
			"revisionsLimit": "50",
			"withVersion": true,
			"update": false,
			"beforeDownload": {
				"controller": "web",
				"action": "beforeDownload",
				"options": {
					"fileList": [
						"xsl/base-uri-def.xsl",
						"js/properties/extend.js"
					]
				}
			}
		},
		{
			"address": "http://mercurial.fisgroup.ru/fcs/web/v3/",
			"alias": "v3",
			"cloneRev": "88",
			"revisionsLimit": "50",
			"withVersion": true,
			"exclude" : [
				"process.ini"
			],
			"beforeDownload": {
				"controller": "web",
				"action": "beforeDownload",
				"options": {
				}
			}
		},
		{
			"address": "http://mercurial.fisgroup.ru/fcs/web/colweb/",
			"alias": "collectors",
			"cloneRev": "210",
			"revisionsLimit": "50",
			"withVersion": true,
			"beforeDownload": {
				"controller": "web",
				"action": "beforeDownload",
				"options": {
				}
			}
		},
		{
			"address": "http://mercurial.fisgroup.ru/fcs/Server/Schemas",
			"alias": "schemas",
			"cloneRev": "0",
			"revisionsLimit": "50",
			"hgFilter": "and not grep(Слияние)",
			"exclude" : [
				"schemas_definition"
			],
			"beforeDownload": {
				"controller": "oracle",
				"action": "beforeDownload",
				"options": {
					"mergeFrom": {
						"alias": "oracleScripts",
						"path": "/sql/"
					},
					"setup.sql": {
						"path": "data/oracle/template_setup.sql",
						"optionalBlockRegex": "--Если имя схемы = __SCHEMA__, то вставить кусок\\s+--Начало вставки для __SCHEMA__[\\s\\S]+?--Конец вставки для __SCHEMA__",
						"filesRegex": "--Включить все файлы из папки __SCHEMA__(\\/([^,\\s]+),?)?( с расширением \\.(\\S+))?\\s+--(\\S+)\\s+--пример\\s+\\S+\\s"
					},
					"data.sql": {
						"path": "data/oracle/template_data.sql",
						"optionalBlockRegex": "--Если имя схемы = __SCHEMA__, то вставить кусок\\s+--Начало вставки для __SCHEMA__[\\s\\S]+?--Конец вставки для __SCHEMA__",
						"filesRegex": "--Включить все файлы из папки __SCHEMA__(\\/([^,\\s]+),?)?( с расширением \\.(\\S+))?\\s+--(\\S+)\\s+--пример\\s+\\S+\\s"
					},
					"config.ini": {
						"path": "data/oracle/template_config.ini",
						"replacements": [
							{
								"from": "patch_ver='[^\\']*'",
								"to": "patch_ver='__NAME__'",
								"__CUSTOM__": "Произвольная строка"
							}
						]
					},
					"setup.bat": {
						"path": "data/oracle/template_setup.bat",
						"filesRegex": "(rem Включить файла для всех схем, которые есть в патче\\r?\\n)(.+)"
					}
				}
			}
		}
	],
	"temp": "/root/fispatch/temp",
	"svn": "svn://svn/satc.dev/FCS/Patches/DISTRIBUTION",
	"svnWebDirName": "web",
	"hgCommand": "hg",
	"processMaxBuffer": "5000000"
}
